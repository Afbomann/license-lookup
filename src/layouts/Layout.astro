---
import "../assets/globals.css"

const {title = "License Lookup", description = "License Lookup"} = Astro.props;

type Props = {
	title?: string;
	description?: string;
}
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title == "License Lookup" ? "License Lookup" : `${title} - License Lookup`}</title>
		<meta name="description" content={description}>
	</head>
	<body>
		<slot />
	</body>
</html>